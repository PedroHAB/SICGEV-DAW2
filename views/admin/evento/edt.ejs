<%- include('../cabecalho') -%>
<div class="body flex-grow-1 px-3">
    <div class="container-lg">
        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header"><strong>Admin</strong></div>
                    <div class="card-body">
                        <div class="example">
                            <div class="tab-content rounded-bottom">
                                <div class="tab-pane p-3 active preview" role="tabpanel" id="preview-739">
                                    <form method="post" enctype="multipart/form-data">
                                        <div class="mb-3">
                                            <label class="form-label" for="exampleFormControlInput">Id</label>
                                            <input class="form-control" readonly name="id" id="exampleFormControlInput" type="text" value="<%=Evento.id%>">
                                        </div> 
                                        <div class="mb-3">
                                        <label class="form-label" for="exampleFormControlInput1">Nome</label>
                                            <input class="form-control" name="nome" id="exampleFormControlInput1" type="text"
                                                placeholder="Digite o nome!" value="<%=Evento.nome%>">
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="exampleFormControlInput2">Frase</label>
                                            <input class="form-control" name="frase" id="exampleFormControlInput2" type="text"
                                                    placeholder="Digite o tema!" value="<%=Evento.frase%>">
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="exampleFormControlInput3">Sobre</label>
                                            <textarea name="sobre" id="exampleFormControlTexarea3" class="form-control" rows="3"><%=Evento.sobre%></textarea>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="exampleFormControlInput4">Local</label>
                                            <input class="form-control" name="local" id="exampleFormControlInput4" type="text"
                                                    placeholder="Digite o Local do evento por extenso!" value="<%=Evento.local%>">
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="exampleFormControlInput5">Data de inicio</label>
                                            <input class="form-control" name="datainicio" id="exampleFormControlInput5" type="date"
                                                    placeholder="Digite a data de inicio do evento!" value="<%=moment(Evento.dataincio).format('YYYY-MM-DD')%>">
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="exampleFormControlInput6">Data de fim do evento</label>
                                            <input class="form-control" name="datafim" id="exampleFormControlInput6" type="date"
                                                    placeholder="Digite a data de fim do evento!" value="<%=moment(Evento.datafim).format('YYYY-MM-DD')%>">
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="fromFile">Logo</label>
                                            <input class="form-control" name="logo" id="fromFile" type="file">
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="fromFile">Banner</label>
                                            <input class="form-control" name="banner" id="fromFile" type="file">
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="fromFile">Foto Sobre</label>
                                            <input class="form-control" name="fotosobre" id="fromFile" type="file">
                                        </div>
                                        <button type="submit" class="btn btn-primary">Adicionar</button>
                                        <button type="reset" class="btn btn-light">Limpar</button>
                                    </form> 
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../rodape') -%>